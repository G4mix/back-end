{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "lib": ["es2021"],
    "rootDir": "./src",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "tsoa": ["node_modules/tsoa/dist"],
      "@config": ["src/config/index.ts"],
      "@constants": ["src/constants/index.ts"],
      "@ioc": ["src/config/ioc.ts"],
      "@service": ["src/service/index.ts"],
      "@service/*": ["src/service/*"],
      "@repository": ["src/repository/index.ts"],
      "@schemas": ["src/schemas/index.ts"],
      "@middlewares": ["src/middlewares/index.ts"],
      "@utils": ["src/utils"],
      "@setup": ["src/__tests__/config/index.ts"],
      "@setup/*": ["src/__tests__/config/*"],
      "@mocks": ["src/__tests__/mocks/index.ts"],
      "@tsoa-build/*": ["src/tsoa/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": true,
    "typeRoots": ["node_modules", "node_modules/@types", "src/types"],
    "types": ["jest", "node"]
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
