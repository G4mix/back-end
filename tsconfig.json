{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "lib": ["es2021"],
    "rootDir": "src",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "tsoa": ["node_modules/tsoa/dist"],
      "@config": ["src/config/index.ts"],
      "@ioc": ["src/config/ioc.ts"],
      "@setup": ["src/__tests__/config/index.ts"],
      "@setup/*": ["src/__tests__/config/*"],
      "@mocks": ["src/__tests__/mocks/index.ts"],
      "@tsoa-build/*": ["src/tsoa/*"],
      "@shared/*": ["src/shared/*"],
      "@shared/gateways": ["src/shared/gateways/index.ts"],
      "@shared/repositories": ["src/shared/repositories/index.ts"],
      "@shared/schemas": ["src/shared/schemas/index.ts"],
      "@shared/utils": ["src/shared/serializers/index.ts"],
      "@shared/types": ["src/shared/types/index.ts"],
      "@shared/middlewares": ["src/shared/middlewares/index.ts"],
      "@shared/errors": ["src/shared/errors/index.ts"],
      "@shared/constants": ["src/shared/constants/index.ts"],
      "@shared/utils": ["src/shared/utils/index.ts"],
      "@shared/decorators": ["src/shared/decorators/index.ts"],
      "@shared/modules": ["src/shared/modules/index.ts"]
    },
    "typeRoots": ["src/types", "node_modules/@types"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}